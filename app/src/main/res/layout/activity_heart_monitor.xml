<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HeartMonitorActivity">

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_support"
        android:layout_centerHorizontal="true"
        android:onClick="launchMainActivity"
        android:text="Back"
        android:textSize="20dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_information_for_finger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:src="@drawable/sensor_image_help"
        android:text="@string/information_for_finger"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/save_heart_rate"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:src="@drawable/save"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/report"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:src="@drawable/report"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/reset"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:src="@drawable/reset"
        android:visibility="gone" />

    <TextView
        android:id="@+id/information_for_finger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image_information_for_finger"
        android:gravity="center"
        android:padding="30dp"
        android:text="@string/information_for_finger"
        android:visibility="gone" />

    <TextView
        android:id="@+id/no_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:text="@string/no_support_heartbeat"
        android:textSize="20dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/heart_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/orange_200"
        android:textSize="100dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/heart_measurement_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:visibility="gone"
        app:lottie_autoPlay="false"
        app:lottie_fileName="@raw/heart_measurement_progress"
        app:lottie_loop="true"
        app:lottie_repeatCount="0" />

</RelativeLayout>